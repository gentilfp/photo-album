<div class="row centered">
  <div class="col-lg-6">
    <%= form_for @photo, :html => {:multipart => true, class: "form-signin"} do |f| %>
      <div class="field">
        <%= f.text_field :title, {class: "form-control", placeholder: "Title"} %>
      </div>
      <div class="field">
        <%= f.text_area :description, {class: "form-control input-sm", placeholder: "Description"} %>
      </div>
      <div class="field">
        <%= f.file_field :picture, {class: "bla"} %>
      </div>
      <br/>
      <%= f.submit t('buttons.save'), class: "btn btn-large btn-primary" %>
      <%= link_to t('buttons.back'), photos_path, class:"btn btn-large btn-danger" %>
    <% end %>
  </div>
</div>
