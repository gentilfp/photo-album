<div class="col-lg-12">
  <h1 class="title">Photos</h1>
  <% if @photos.any? %>
    <table class="table table-striped table-condensed">
      <tbody>
        <tr>
          <th>Photo</th>
          <th>Title</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
        <% @photos.each do |photo| %>
          <tr id="photo">
            <td><%= link_to image_tag(photo.picture.url(:medium)), photo %></td>
            <td><%= photo.title %></td>
            <td><%= photo.description %></td>
            <td>
              <%= link_to 'Edit', edit_photo_path(photo) %>
              <%= link_to 'Delete', photo, :method => :delete, :data => { :confirm => t('helpers.links.confirm') } %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <%= will_paginate @photos  %>
    </table>
  <% else  %>
    <h2 class="h2 well">No Photos :-(</h2>
  <% end %>
  <br>
    <%= link_to 'Upload', new_photo_path, class:"btn btn-large btn-success" %>
  </br>
</div>
