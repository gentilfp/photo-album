<div class="col-lg-12">
  <h1>Photos</h1>
  <% if @photos.any? %>
    <table class="table table-striped table-condensed">
      <tbody>
        <tr>
          <th>Title</th>
          <th>Photo</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        <% @photos.each do |photo| %>
          <tr id="photo">
            <td><%= photo.title %> </td>
            <td><%= image_tag photo.picture.url(:medium) %></td>
            <td><%= link_to 'Show', photo %></td>
            <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
            <td><%= link_to 'Destroy', photo, :method => :delete, :data => { :confirm => 'Are you sure?' }   %></td>
          </tr>
        <% end %>
      </tbody>
      <%= will_paginate @photos  %>
    </table>
  <% else  %>
    <h2 class="h2 well">No Photos :-(</h2>
  <% end %>
  <br>
    <%= link_to 'Upload', new_photo_path, class:"btn btn-large btn-success" %>
  </br>
</div>
