<div class="centered">
  <p id="notice"><%= notice %></p>
  <p><%= image_tag @photo.picture.url(:medium) %></p>
  <p>
    <b><%= t('header.title')%>:</b>
    <%= @photo.title %>
  </p>
  <p>
    <b><%= t('header.description') %>:</b>
    <%= @photo.description %>
  </p>

  <%= link_to t('buttons.edit'), edit_photo_path(@photo), class: "btn btn-large btn-primary" %>
  <%= link_to t('buttons.back'), photos_path, class:"btn btn-large btn-danger" %>

  <!-- List comments -->
  <div class="row" id="list">
    <%= render 'comments/list', object: @comment %>
  </div>
  <div class="row" id="comment_form">
    <%= render "comments/comment_form", object: @photo %>
  </div>
</div>
